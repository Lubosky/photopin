.profile.edit
  %h3
    Edit Profile
  %hr
  .profile-avatar
    = user_avatar(@user, id: 'preview_img', class: 'img-circle')
  = simple_form_for @user, url: { action: 'update' }, html: {multipart: true, class: 'form form-horizontal' }, wrapper: 'horizontal_form' do |f|
    = f.file_field :avatar, id: 'previewable', class: 'file-upload hidden'
    %label{ for: 'previewable' }
      = icon_tag 'add'
      %strong
        Select a file...
    = f.input :name
    = f.input :bio, input_html: { rows: 4 }
    .form-actions.text-center
      = f.button :submit, class: 'btn rounded purple'
