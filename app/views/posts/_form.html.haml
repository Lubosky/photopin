= simple_form_for @post, html: { multipart: true, class: 'form form-vertical' } do |f|
  = f.file_field :image, id: 'previewable', class: 'file-upload hidden'
  %label{ for: 'previewable' }
    = icon_tag 'add'
    %strong
      Choose a file...
  = f.input :caption, label: false
  .form-actions.text-center
    = f.button :submit, class: 'btn rounded green'
