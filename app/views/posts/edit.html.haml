.card
  .card-header
    .pull-right
      - if @post.user.id == current_user.id
        = link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }
        \|
        = link_to 'Cancel', posts_path
      - else
        = link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }
  .card-image
    =link_to image_tag(@post.image.thumb('650x').url, class:'img-responsive'), post_path(@post) if @post.image_stored?
  .card-container
    .card-caption
      = render 'form'
