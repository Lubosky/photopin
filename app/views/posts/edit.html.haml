.card
  .card-header
    .pull-right
      = link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }
      \|
      = link_to 'Cancel', posts_path
  .card-image
    =link_to image_tag(@post.image.thumb('650x450').url, class:'img-responsive'), post_path(@post) if @post.image_stored?
  .card-container
    .card-caption
      = render 'form'
