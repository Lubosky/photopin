.profile.edit
  %h3
    Edit #{resource_name.to_s.humanize}
  %hr
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form form-horizontal', method: :put }, wrapper: 'horizontal_form') do |f|
    = f.error_notification
    .form-inputs
      = f.input :username, required: true, disabled: true
      = f.input :email, required: true
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %p
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      = f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false
      = f.input :password_confirmation, required: false
      = f.input :current_password, hint: "we need your current password to confirm your changes", required: true
    .form-actions.text-center
      = f.button :submit, "Update", class: "btn btn-success"
  %hr
    %h4 Cancel my account
    %p
      Unhappy? #{link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete}
  = link_to "Back", :back
